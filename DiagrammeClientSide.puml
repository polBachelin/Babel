namespace Sound {
    class EncodedSound {}

    class DecodedSound {
        -int _frameIndex;
        -int _maxFrameIndex;
        -std::array<float> _sample //Sample size is = NUM_SECONS * SAMPLE_RATE * NUM_CHANNELS * sizeof(float)
    }

    class ISoundManager {
        +int recordAudio() = 0;
        +int playAudio() = 0;
        +bool isStreamActive() = 0;
    }

    ' class ASoundManager {
    '     -std::array<float> _sample;
    ' }

    class IEncodeManager {
        +EncodedSound encode(DecodedSound &sound) = 0;
        +DecodedSound decode(EncodedSound &sound) = 0;
    }
}

namespace SoundLib {
    class PortAudioManager {
        +void recordCallback();
        +void playCallback();
        -DecodedSound _sound;
        -PaStream *_stream;
        -PaStreamParameters _outputParameters;
        -PaStreamParameters _inputParameters;
    }

    class OpusEncoder {}
}

'Sound.ISoundManager->Sound.ASoundManager
Sound.ISoundManager->SoundLib.PortAudioManager
Sound.IEncodeManager->SoundLib.OpusEncoder
